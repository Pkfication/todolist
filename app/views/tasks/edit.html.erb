<div class="space-y-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Edit Task</h1>
    <%= link_to 'Back to Tasks', tasks_path, class: 'text-blue-500 hover:text-blue-700 transition duration-300' %>
  </div>

  <%= form_with(model: @task, local: true, class: 'space-y-4') do |form| %>
    <% if @task.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Oops! There were some errors:</strong>
        <ul class="mt-2 list-disc list-inside">
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.text_field :title, 
          class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.text_area :description, 
          class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 h-24' %>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.select :status, 
          ['pending', 'in_progress', 'completed'], 
          { prompt: 'Select Status' }, 
          class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= form.label :due_date, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.date_field :due_date, 
          class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit 'Update Task', 
          class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out transform hover:scale-105' %>
    </div>
  <% end %>
</div>