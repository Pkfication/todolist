<% flash.each do |type, message| %>
  <div class="fixed top-4 right-4 z-50">
    <div class="
      <%= type == 'notice' ? 'bg-green-500' : 'bg-red-500' %> 
      text-white px-4 py-2 rounded-lg shadow-lg
      transition duration-300 ease-in-out
      animate-bounce
    ">
      <%= message %>
    </div>
  </div>
<% end %>